
    #& $Global.SevenZip a -tzip -mx=1 -r "$($Backups.Path)\$Type\$BackupName.zip" "$($Backups.Saves)" -x!*.log -x!*.zip -x!*.old #Currently not working
    # Define the exclusions for the backup
    $Exclusions = $Backups.Exclusions -join "|"
    $ExclusionsRegex = [regex]::Escape($Exclusions)
    $ExclusionsRegex = "($ExclusionsRegex)"

    # Define the filter to exclude certain files from the backup
    $ExcludeFilter = {
      $_.Name -notmatch $ExclusionsRegex -and $_.Extension -notin $Global.Exclusions
    }

    # Get the path to the directory that should be backed up
    $BackupDirectory = "$($Backups.Saves)"

    # Get all files that should be included in the backup
    $FilesToBackup = Get-ChildItem -Path $BackupDirectory -Recurse | Where-Object $ExcludeFilter

    # Get the relative paths of the files
    $RelativePaths = $FilesToBackup.FullName | ForEach-Object { $_.Substring($BackupDirectory.Length) }

    # Compress the files into a zip archive using the specified compression options
    Compress-Archive -Path $RelativePaths -DestinationPath "$($Backups.Path)\$Type\$BackupName.zip" -CompressionLevel 'Fastest'